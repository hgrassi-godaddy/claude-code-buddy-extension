{
  "name": "claude-buddy-extension",
  "displayName": "Claude Buddy",
  "description": "A friendly AI coding companion for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:claude-buddy.openPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-buddy.openPanel",
        "title": "Open Claude Buddy",
        "category": "Claude Buddy"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-buddy-container",
          "title": "Claude Buddy",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "claude-buddy-container": [
        {
          "id": "claudeBuddyPanel",
          "name": "Claude Buddy",
          "type": "webview",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}