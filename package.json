{
  "name": "claude-buddy-extension",
  "displayName": "Claude Buddy",
  "description": "A friendly AI coding companion for VS Code",
  "version": "0.0.1",
  "publisher": "patacones-unicorns",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hgrassi-godaddy/claude-code-buddy-extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:claude-buddy.openPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-buddy.openPanel",
        "title": "Open Claude Buddy",
        "category": "Claude Buddy"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-buddy-container",
          "title": "Claude Buddy",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "claude-buddy-container": [
        {
          "id": "claudeBuddyPanel",
          "name": "Claude Buddy",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "Claude Buddy",
      "properties": {
        "claudeBuddy.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google Gemini API key for Claude Buddy conversations. Get one free at https://aistudio.google.com/app/apikey",
          "markdownDescription": "Your Google Gemini API key for Claude Buddy conversations. Get one free at [Google AI Studio](https://aistudio.google.com/app/apikey)"
        },
        "claudeBuddy.saveConversationHistory": {
          "type": "boolean",
          "default": true,
          "description": "Whether to save conversation history for friendship tracking"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npm run compile && vsce package",
    "build-and-package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^4.9.4"
  }
}